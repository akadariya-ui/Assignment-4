<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Projects</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar', {page: '/solutions/projects'}) %>
  <section class="hero">
    <h1>Projects</h1>
    <div>
      <a href="/solutions/projects?sector=Industry">Industry</a>
      <a href="/solutions/projects?sector=Transportation">Transportation</a>
      <a href="/solutions/projects?sector=Electricity">Electricity</a>
      <a href="/solutions/projects?sector=Food, Agriculture, and Land Use">Food, Agriculture, and Land Use</a>
      <a href="/solutions/projects?sector=Land Sinks">Land Sinks</a>
      <a href="/solutions/projects">View All</a>
    </div>
  </section>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Sector</th>
        <th>Summary</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(project => { %>
      <tr>
        <td><%= project.title %></td>
        <td><a href="/solutions/projects?sector=<%= project.sector %>"><%= project.sector %></a></td>
        <td><%= project.summary_short %></td>
        <td><a href="/solutions/projects/<%= project.id %>">Details</a></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
