<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= project.title %></title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar', {page: ''}) %>
  <section class="hero">
    <h1><%= project.title %></h1>
    <p>Below, you will find detailed information about the project: <%= project.title %></p>
  </section>
  <div>
    <img src="<%= project.feature_img_url %>" alt="<%= project.title %>">
    <p><%= project.intro_short %></p>
    <p><%= project.impact %></p>
    <p><a href="<%= project.original_source_url %>" target="_blank">More Info</a></p>
  </div>
  <div>
    <blockquote id="quote">Loading quote...</blockquote>
  </div>
  <div>
    <a href="#" onclick="history.back(); return false;">Back</a>
  </div>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(res => res.json())
        .then(data => {
          document.getElementById("quote").innerText = `"${data.quote}" - ${data.author}`;
        })
        .catch(err => console.error(err));
    });
  </script>
</body>
</html>
